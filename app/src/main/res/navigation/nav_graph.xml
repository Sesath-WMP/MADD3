<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inputFragment">

    <fragment
        android:id="@+id/inputFragment"
        android:name="com.madd3.ui.InputFragment"
        android:label="Calculator">
        <action
            android:id="@+id/action_inputFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.madd3.ui.ResultFragment"
        android:label="@string/title_result">
        <argument
            android:name="numberA"
            app:argType="float" />
        <argument
            android:name="numberB"
            app:argType="float" />

        <argument
            android:name="operation"
            app:argType="string" />
    </fragment>
</navigation>
